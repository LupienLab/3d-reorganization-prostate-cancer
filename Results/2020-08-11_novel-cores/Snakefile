rule all:
    input:
        "T2E-contact.pdf",
        "ZNF516-PMEPA1-contact.pdf",
        "BRAF-DENND2A-contact.pdf",


rule t2e_contact:
    input:
        "../../Data/Processed/2019-06-18_PCa-LowC-sequencing/Contacts/PCa13848.mcool",
    output:
        "T2E-contact.pdf",
    params:
        x = "chr21:38000000-39000000",
        y = "chr21:41082474-41917525",
        res = 10000,
        zmin = -4,
        zmax = -2,
    shell:
        "cooler show -b --cmap bwr --zmin {params.zmin} --zmax {params.zmax} -r2 {params.x} -o {output} {input}::/resolutions/{params.res} {params.y}"

