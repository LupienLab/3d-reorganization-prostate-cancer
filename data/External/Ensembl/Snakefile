# =============================================================================
# Configuration
# =============================================================================
ASSEMBLY = "hg38"


# =============================================================================
# Meta Rules
# =============================================================================
rule all:
    input:
        "refGene.txt.gz"


# =============================================================================
# Rules
# =============================================================================
rule download_refGene:
    output:
        "refGene.txt.gz"
    shell:
        "wget -N http://hgdownload.cse.ucsc.edu/goldenPath/{ASSEMBLY}/database/refGene.txt.gz"
